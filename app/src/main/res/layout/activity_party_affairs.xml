<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/function_background">
    <RelativeLayout
        android:id="@+id/partyaffairs_title_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="36dp">
        <ImageView
            android:id="@+id/partyaffairs_title_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go_left"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/partyaffairs_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/partyaffairs_title_img"
            android:textColor="@color/color_white1"
            android:text="@string/party_affairs"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:id="@+id/partyaffairs_connect_relative"
        android:layout_below="@+id/partyaffairs_title_relative">

        <app.com.tvrecyclerview.TvRecyclerView
            android:id="@+id/partyaffairs_tvrecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            app:scrollMode="followScroll"
            app:focusDrawable="@drawable/bg_border4">

        </app.com.tvrecyclerview.TvRecyclerView>
    </RelativeLayout>

</RelativeLayout>
