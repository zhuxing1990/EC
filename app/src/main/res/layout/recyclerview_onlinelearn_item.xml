<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/onlinelearn_recycler_item_rl1"
        android:layout_width="255dp"
        android:layout_height="138dp">
        <ImageView
            android:id="@+id/onlinelearn_recycler_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
           />
        <ImageView
            android:id="@+id/onlinelearn_recycler_item_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:src="@drawable/play_video"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:background="@color/color_orange1"
        android:layout_below="@id/onlinelearn_recycler_item_rl1">
        <TextView
            android:id="@+id/onlinelearn_recycler_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/color_white1"
            android:textSize="30sp"
            android:layout_centerInParent="true"
            android:text="@string/app_name"/>
    </RelativeLayout>
</RelativeLayout>