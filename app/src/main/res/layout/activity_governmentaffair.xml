<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_background1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/governmentaffair_title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:focusable="false">
        <ImageView
            android:id="@+id/governmentaffair_title_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go_left"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/governmentaffair_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/governmentaffair_title_img"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginRight="240dp"
        android:layout_below="@+id/governmentaffair_title_rl">
            <app.com.tvrecyclerview.TvRecyclerView
                android:id="@+id/governmentaffair_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:focusDrawable="@drawable/bg_border4">
            </app.com.tvrecyclerview.TvRecyclerView>
    </RelativeLayout>
</RelativeLayout>